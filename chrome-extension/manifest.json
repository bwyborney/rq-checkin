{
    "manifest_version" : 3,
    "name": "rq-checkin",
    "version": "1.0",
    "description": "A custom generated check-in form",

    "icons": {
        "16": "images/icon-16.png",
        "48": "images/icon-48.png",
        "128": "images/icon-128.png"
    },

    "permissions" : [
        "activeTab",
        "scripting"
    ],

    "content_scripts" : [
        
        {
            "js" : [
                "scripts/addForm.js"
            ],
            "css" : [
                "style/addForm.css"
            ],
            "matches" : [
                "https://cpr.repairq.io/ticket/*"
            ],
            "run_at": "document_end"
        }
    ],

    "web_accessible_resources": [
        {
          "resources": [ 
            "/checkin-form/*" 
        ],
          "matches": [ 
            "<all_urls>" 
        ]
        }
    ]

    
}